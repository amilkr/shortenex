<div class="flash_error">
  <div class="row">
    <p><%= get_flash(@conn, :error) %></p>
  </div>
</div>

<div class="jumbotron">
  <h2>Yet another url shortener</h2>
  <p class="lead">This is a simple project created to play a little bit with Elixir, Phoenix and Ecto.</p>

  <form class="form-horizontal" action="/s" method="post">
    <input type="hidden" name="csrf_token" value="<%= @conn.private.plug_session.csrf_token %>">
    <div class="form-group">
      <div class="col-sm-8">
        <input type="text" class="form-control" name="url" placeholder="Paste a link to shorten it" required="required">
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-sm-2">
        <button type="submit" class="btn btn-warning">Shorten</button>
      </div>
    </div>
  </form>

  <%= if @shortened_url do %>
    <div class="">
      the shortened url:
      <a href="<%= @shortened_url %>"><%= @shortened_url %></a>  
    </div>
  <%= end %>
  
</div>
